# hub!
eval "$(hub alias -s)"

# IP
# source: https://github.com/mathiasbynens/dotfiles
alias ip="curl http://ifconfig.me"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# navigation
alias ..="cd .."

# shortcuts
alias g="git"
alias m="make"
alias s="subl"
alias subk="subl"
alias gti="git"
alias gr="git rebase"
alias gs="git status"
alias gc="git commit"
